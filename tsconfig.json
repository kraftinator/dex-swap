{
  "compilerOptions": {
    "incremental": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    //"target": "es5",
    "target": "ES2020", // Allows BigInt literals
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
